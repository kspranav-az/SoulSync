<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2BAA8"
    tools:context=".UserBanActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="213dp"
            android:layout_height="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.459"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/profile2"
            tools:layout_editor_absoluteY="132dp" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="141dp"
            android:layout_height="43dp"
            android:text="Maya karan"
            android:textColor="#455154"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.453" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="279dp"
            android:layout_height="173dp"
            android:text="User, You have broken the community guidelines(341 a) , you are till further notice banned from the Feed.You are to take daily sessions with the Maitri."
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.657" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="234dp"
            android:layout_height="71dp"
            android:text="You can request your case to the coordinators."
            android:textColor="#455154"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.793" />


        <Button
            android:id="@+id/Login"
            android:layout_width="235dp"
            android:layout_height="41dp"
            android:background="@drawable/bluebutton"
            android:backgroundTint="#455154"
            android:text="Apply for Revaluation"
            android:textAllCaps="false"
            android:textAppearance="@null"
            android:textColor="@color/white"
            android:textColorHighlight="@null"
            android:textColorLink="@null"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.876" />

        <Button
            android:id="@+id/prf"
            android:layout_width="53dp"
            android:layout_height="39dp"
            android:background="@drawable/baseline_person_24"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="22dp" />

        <Button
            android:id="@+id/msg"
            android:layout_width="42dp"
            android:layout_height="36dp"
            android:background="@drawable/baseline_message_24"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="22dp" />

        <Button
            android:id="@+id/feed"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/baseline_feed_24"
            tools:layout_editor_absoluteX="322dp"
            tools:layout_editor_absoluteY="18dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
